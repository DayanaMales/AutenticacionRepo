<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/imag"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="220dp"></TableLayout>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"

android:orientation="vertical">

    <TextView
        android:layout_width="391dp"
        android:layout_height="162dp"
        android:text="RealTime Firebase"
        android:textAlignment="center"
        android:textColor="#9C0B4F"
        android:textSize="30pt"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="150pt"
        android:layout_height="54dp"
        android:layout_marginTop="10pt"
        android:hint="mycorreo@domain.com"
        android:inputType="textEmailAddress"
        android:paddingVertical="5px"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/etClave"
        android:layout_width="150pt"
        android:layout_height="48dp"
        android:layout_marginVertical="5pt"
        android:hint="clave"
        android:inputType="textPassword"
        android:paddingVertical="5px"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/spnPerfil"
        android:layout_width="match_parent"
        android:layout_height="41dp" />

    <Button
        android:id="@+id/btnIniciar"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:padding="2pt"
        android:text="Iniciar Session" />

    <Button
        android:id="@+id/btnRegistrar"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:padding="2pt"
        android:text="Registrarse" />




</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>